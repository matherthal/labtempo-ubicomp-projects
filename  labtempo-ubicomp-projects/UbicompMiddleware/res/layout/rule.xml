<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

	<TextView
	    android:id="@+id/textViewRule"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/rule_creation"
	    android:textSize="22dp" />
	
	<EditText
	    android:id="@+id/editTextCreateRule"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/rule_name"
	    android:inputType="text" />

	<ListView
	    android:id="@+id/listViewConds"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />
	
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
		<Button
		    android:id="@+id/buttonAddCond"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_weight="1"
		    android:text="@string/button_addCond"
		    android:clickable="true"
		    android:onClick="buttonAddCond_Clicked" />
		    
		<Button
		    android:id="@+id/buttonRmCond"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:clickable="true"
		    android:text="@string/button_rmCond" />
	</LinearLayout>
	
	<ListView
	    android:id="@+id/listViewActions"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />	    
	
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
		<Button
		    android:id="@+id/buttonAddAction"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_weight="1"
		    android:text="@string/button_addAction" />
		    
		<Button
		    android:id="@+id/buttonRmAction"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_weight="1"
		    android:text="@string/button_rmAction" />
	</LinearLayout>
	
	<Button
	    android:id="@+id/buttonCreateRule"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/button_createrule"
	    android:clickable="true"
     	android:onClick="buttonCreateRule_Clicked" />
	
	<Button
	    android:id="@+id/buttonRunScript"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/button_runscript"
	    android:clickable="true"
     	android:onClick="buttonRunScript_Clicked" />

	<TextView
	    android:id="@+id/textViewLog"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/textView_log"
	    android:textSize="12dp" />
</LinearLayout>
