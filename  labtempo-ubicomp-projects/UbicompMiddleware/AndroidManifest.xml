<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.uff.tempo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name=".apps.MainListView" android:label="MainListView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <!-- Rule -->
        <activity android:name=".apps.RuleActivity"
            android:label="@string/rule_creation" />
        <activity android:name=".apps.RuleConditionActivity"
            android:label="@string/rule_cond" />
        <activity android:name=".apps.RuleCondListActivity"
            android:label="@string/rule_cond" />
        <activity android:name=".apps.RuleActionListActivity"
            android:label="@string/rule_action" />
        <activity android:name=".apps.RuleActionActivity"
            android:label="@string/rule_action" />
        <service android:enabled="true" android:name=".middleware.resources.Rule" />
        <!-- End Rule -->
        
        <activity android:name=".apps.stove.StoveView" />
        <activity android:name=".apps.baseview.BaseView" />
        
        <service android:enabled="true" android:name=".middleware.management.ResourceAgent" />
		
        <service android:enabled="true" android:name=".middleware.resources.Stove" />
        
        <service android:enabled="true" android:name=".apps.MediaService" />
    </application>
    
</manifest>