<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<TextView
	    android:id="@+id/textViewRule"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/rule_creation"
	    android:textSize="22dp" />

	<Spinner
	    android:id="@+id/spinnerClasseChoice"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:prompt="@string/rule_select_ra_class" />

	<Spinner
	    android:id="@+id/spinnerRAChoice"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:prompt="@string/rule_select_ra"
	    android:clickable="false" />

	<Spinner
	    android:id="@+id/spinnerRAMethodChoice"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:prompt="@string/rule_select_ra_mtd"
	    android:clickable="false" />

	<EditText
	    android:id="@+id/editTextValue"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:ems="10"
	    android:hint="@string/rule_comparing_val" />

	<Spinner
	    android:id="@+id/spinnerParams"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />
	
	<Button
	    android:id="@+id/buttonCreateRuleAction"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/button_createrule"
	    android:clickable="true"
     	android:onClick="buttonCreateAction_Clicked" /> 

</LinearLayout>